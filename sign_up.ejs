            </form>
                <div class="signup">
                    <div class="dont-have-an-container">
                        <span>Already have an account? </span>
                        <a href="/signin">Sign in</a>
                    </div>
                </div>
            </section>
        </main>
    </div>
    
    <script src="index.js">
        // Function to handle placeholder behavior
        function handlePlaceholder(input) {
            input.addEventListener('focus', function() {
                this.setAttribute('data-placeholder', this.getAttribute('placeholder'));
                this.setAttribute('placeholder', '');
            });
            input.addEventListener('blur', function() {
                if (this.value === '') {
                    this.setAttribute('placeholder', this.getAttribute('data-placeholder'));
                }
            });
        }
        
        // Apply placeholder behavior to username and password inputs
        handlePlaceholder(document.querySelector('.icons'));
        handlePlaceholder(document.querySelector('.twitter'));
    </script>
</body>
</html>