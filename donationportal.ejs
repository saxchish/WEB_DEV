                <h1>Support Our Cause</h1>
                <p>Your donations make a huge difference. Help us create a better tomorrow by donating to one of our programs.</p>
        
                <div class="donation-form">
                    <h2>Make a Donation</h2>
                    
                    <!-- Donation Type -->
                    <label for="donation-type">Choose Donation Type:</label>
                    <select id="donation-type">
                        <option value="one-time">One-Time Donation</option>
                        <option value="monthly">Monthly Recurring Donation</option>
                        <option value="quarterly">Quarterly Recurring Donation</option>
                        <option value="annual">Annual Recurring Donation</option>
                    </select>
        
                    <!-- Donation Amount Section -->
                    <div class="donation-amounts">
                        <div class="donation-amount">$25</div>
                        <div class="donation-amount">$50</div>
                        <div class="donation-amount">$100</div>
                        <div class="donation-amount">
                            <input type="number" placeholder="Custom Amount">
                        </div>
                    </div>
        
                    <!-- Payment Methods -->
                    <div class="payment-methods">
                        <div class="payment-method">Credit Card</div>
                        <div class="payment-method">PayPal</div>
                        <div class="payment-method">Bank Transfer</div>
                        <div class="payment-method">Apple Pay</div>
                    </div>
        
                    <!-- Where to allocate the funds -->
                    <label for="allocation">Allocate Your Donation:</label>
                    <select id="allocation">
                        <option value="scholarships">Scholarships</option>
                        <option value="events">Events & Reunion</option>
                        <option value="campus-development">Campus Development</option>
                        <option value="research">Research</option>
                    </select>
        
                    <!-- Submit Button -->
                    <button class="submit-button">Donate Now</button>
                </div>
        
                <!-- Donation History -->
                <div class="donation-history">
                    <h2>Your Donation History</h2>
                    <ul class="donation-history-list">
