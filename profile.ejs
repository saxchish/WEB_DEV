        }

        .profile-info {
            display: flex;
            align-items: flex-end;
            padding: 20px;
            background-color: white;
        }

        .profile-pic {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            border: 4px solid white;
            margin-right: 20px;
            margin-top: -75px;
        }

        .user-details {
            flex-grow: 1;
        }

        .user-details h1 {
            margin: 0;
            font-size: 28px;
        }

        .user-details p {
            margin: 5px 0;
            color: #65676B;
        }

        .message-btn {
            padding: 7px 16px;
            background-color: white;
            color: black;
            border: 1px solid #dbdbdb;
            border-radius: 4px;
            cursor: pointer;
            font-weight: bold;
        }

        main {
            padding: 20px;
        }

        .info-resume-suggestions {
            display: flex;
            align-items: flex-start;
        }

        .info-buttons {
            display: flex;
            margin-right: 30px;
            position: relative; /* Make the parent container position relative */
        }

        .stats {
            display: flex;
            margin-bottom: 20px;
        }

        .stat {
            margin-right: 40px;
        }

        .stat-value {
            font-weight: bold;
        }

        .stat-label {
            color: #65676B;
        }

        .info-btn {
            height: 90px;
            width: 90px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 10px;
            background-color: #fafafa;
            border: 1px solid #dbdbdb;
            border-radius: 4px;
            cursor: pointer;
        }

        .info-btn img {
            height: 50px;
        }

        .suggestions {
            width: 275px; /* Increased by 10% */
            background-color: white;
            border: 1px solid #dbdbdb;
            border-radius: 5px;
            padding: 12px; /* Adjusted for new size */
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
            margin-left: auto; /* Pushes Suggested for you to the far right */
            height: 250px; /* Increased by 20% */
            position: relative;
            top: -9%; /* Moved up by 9% */
        }

        .suggestion-list {
            list-style-type: none;
            padding: 0;
            margin: 0;
        }

        .suggestion-list li {
            display: flex;
            align-items: center;
            margin-bottom: 12px; /* Adjusted for new size */
        }

        .suggestion-list img {
            width: 48px; /* Increased proportionally */
            height: 48px; /* Increased proportionally */
            border-radius: 50%;
            margin-right: 12px; /* Adjusted for new size */
        }

        .suggestion-info {
            flex-grow: 1;
        }

        .username {
            display: block;
            font-weight: bold;
            color: #262626;
        }

        .fullname {
            color: #8e8e8e;
        }

        .follow-btn.small {
            padding: 6px 10px; /* Adjusted for new size */
            font-size: 13px; /* Slight increase in font size */
        }

        #details-box, #resume-box {
            position: absolute; /* Make the pop-ups position absolute */
            top: 100px; /* Place it directly below the buttons */
            left: 0; /* Align with the left edge of the button */
            z-index: 1000;
            background-color: #f9f9f9;
            border: 1px solid #dbdbdb;
            border-radius: 4px;
            padding: 10px;
            display: none;
            width: 200px;
        }

        #resume-box button {
            background-color: #0095f6;
            color: white;
            border: none;
            border-radius: 4px;
            padding: 10px 20px;
            cursor: pointer;
        }
