.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
    display: flex;
    flex-direction: column;
    gap: 30px; /* Adds space between the search bar and the alumni cards */
    margin-right: 10%; /* Shifts the container 10% to the right */
}


/* Search Section */
.search-section {
    display: flex;
    align-items: center;
    background-color: #ffffff;
    border-radius: 10px;
    padding: 20px;
    height: 100px;
    width: 100%; /* Full width excluding sidebar */
    margin-bottom: 20px;
}

.graduate-icon {
    width: 80px;
    height: 80px;
    background-color: #f0f5ff;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-right: 20px;
}

.graduate-icon img {
    width: 50px;
    height: 50px;
}

.search-fields {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    flex-grow: 1;
}

.search-fields input {
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 20px;
    font-size: 14px;
    flex-grow: 1;
}

.apply-btn, .reset-btn {
    padding: 10px 20px;
    border: none;
    border-radius: 20px;
    color: #ffffff;
    font-size: 14px;
    cursor: pointer;
}

.apply-btn {
    background-color: #2c3e50;
}

.reset-btn {
    background-color: #e74c3c;
}

/* Alumni List and Cards */
.alumni-list {
    display: grid;
    grid-template-columns: repeat(2, 1fr); /* 2 columns for cards */
    gap: 20px;
}

.alumni-card {
    background-color: #ffffff;
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
    padding: 20px;
    text-align: center;
}

.alumni-card:hover {
    transform: scale(1.05);
}

.alumni-card img {
    width: 80px;
    height: 80px;
    border-radius: 50%; /* Makes the image spherical */
    object-fit: cover;
    margin-bottom: 10px;
}

.alumni-info {
    text-align: center;
}

.username {
    color: #7f8c8d;
    font-size: 14px;
    margin-bottom: 5px;
}

.fullname {
    font-weight: bold;
    font-size: 16px;
}

/* Responsive Adjustments */
@media (max-width: 768px) {
    .alumni-list {
        grid-template-columns: 1fr;
    }
}
</style>
