}

/* Profile card container */
.profile-card {
    background-color: white;
    border-radius: 10px;
    padding: 40px;
    display: flex; /* Enable flexbox */
    justify-content: space-between; /* Ensure even spacing between elements */
    align-items: center; /* Align items vertically in the center */
    width: 350px; /* Adjust width to fit the layout */
    margin-bottom: 20px; /* Space between profile cards */
}

/* Profile image */
.profile-card img {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    margin-right: 20px;
}

/* Profile text content */
.profile-card h3, .profile-card p {
    margin: 0;
}

/* Profile text section (name and title) */
.profile-info {
    flex-grow: 1; /* Allows the text to take up available space */
}

/* Profile icons container */
.profile-icons {
    display: flex;
    flex-direction: column; /* Stack the icons vertically */
    font-size: 20px;
    margin-left: 20px; /* Space between text and icons */
}

/* Individual icons */
.profile-icons span {
    margin-bottom: 10px; /* Space between icons */
    cursor: pointer; /* Changes cursor on hover */
}

.profile-icons span:last-child {
    margin-bottom: 0; /* Remove margin for the last icon */
}


/* Chat Popup */
.chat-popup {
    position: fixed;
    bottom: 20px;
    right: 20px;
    width: 300px;
    height: 400px;
    background-color: white;
    border: 1px solid #ccc;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    display: flex;
    flex-direction: column;
    z-index: 1000;
}

.chat-popup.hidden {
    display: none;
}

.chat-header {
    display: flex;
    align-items: center;
    padding: 10px;
    background-color: #1e4263;
    color: white;
    border-radius: 10px 10px 0 0;
}

.chat-header img {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    margin-right: 10px;
}

.chat-body {
    flex-grow: 1;
    padding: 10px;
    overflow-y: auto;
    background-color: #f9f9f9;
}

.chat-footer {
    padding: 10px;
    display: flex;
}

.chat-footer input {
    flex-grow: 1;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
}

.chat-footer button {
    margin-left: 10px;
    padding: 10px;
    background-color: #1e4263;
    color: white;
    border: none;
    cursor: pointer;
}
/* Style for the search bar */
.search-bar {
    display: flex;
    background-color: white;
    border-radius: 50px; /* Makes the input oval */
    padding: 10px; /* Increases the padding for a larger input box */
    width: 300px; /* Increases the width of the search bar */
    box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1); /* Adds a soft shadow for depth */
}

.search-bar input {
    border: none;
    padding: 12px 20px; /* Makes the input field larger */
    border-radius: 50px; /* Oval shape */
    width: 100%; /* Ensures the input field takes full width */
    font-size: 16px;
    outline: none; /* Removes the outline */
}

.search-bar button {
    color: white;
